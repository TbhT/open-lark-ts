{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "charset": "utf8",
    "declaration": true,
    "declarationDir": "types/",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test": ["./test"]
    }
  },
  "exclude": ["node_modules/", "dist/"],
  "include": ["src/", "packages"],
  "typedocOptions": {
    "mode": "modules",
    "out": "./documents",
    "readme": "readme"
  }
}
